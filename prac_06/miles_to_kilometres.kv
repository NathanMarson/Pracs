BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            text: '36'
            font_size: 36
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert mi to km'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 36
        color: (1, 1, 0, 1)